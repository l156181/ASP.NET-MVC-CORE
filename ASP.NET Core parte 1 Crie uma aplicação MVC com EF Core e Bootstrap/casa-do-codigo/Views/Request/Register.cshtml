@model OrderUser

@{
    ViewData["Title"] = "Register";
}

<h3>Register</h3>

<div class="panel panel-default">
        <form role="form" method="POST" asp-action="summary">
            <div class="col-md-4">

                <div class="form-group">
                    <label class="control-label" for="userName">Name</label>
                    <input type="text" class="form-control" id="userName" placeholder="Enter with your name" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="userEmail">Email address</label>
                    <input type="email" class="form-control" id="userEmail" placeholder="Enter with your email" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="phoneNumber">Phone Number</label>
                    <input type="text" class="form-control" id="phoneNumber" placeholder="Enter with your phone number" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>    

            <div class="col-md-4">

                <div class="form-group">
                    <label class="control-label" for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Enter with your address"  asp-for="Address">
                    <span asp-validation-for="Adresss" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="complement">Complement</label>
                    <input type="text" class="form-control" id="complement" placeholder="Enter with your complement"  asp-for="Complement">
                    <span asp-validation-for="Complement" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="neighborhood">Neighborhood</label>
                    <input type="text" class="form-control" id="neighborhood" placeholder="Enter with your neighborhood"  asp-for="Neighborhood">
                    <span asp-validation-for="Neighborhood" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">    

                <div class="form-group">
                    <label class="control-label" for="city">City</label>
                    <input type="text" class="form-control" id="city" placeholder="Enter with your city"  asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="city">UF</label>
                    <input type="text" class="form-control" id="uf" placeholder="Enter with your uf"  asp-for="UF">
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="city">Zip Code</label>
                    <input type="text" class="form-control" id="zipCode" placeholder="Enter with your zip-code" asp-for="ZipCode">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                 <div class="form-group pull-right">
                    <a asp-action="shoppingbag" class="btn btn-success">Go Back to Shopping Bag</a>
                    <button type="submit" class="btn btn-success">Finish Order</a>
                </div>
            </div>
        </form>

        <div class="panel-body">
        </div>
</div>

